<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.martyna.popularmovies.MovieDetail$PlaceholderFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:ignore="ScrollViewSize">

        <ImageView
            android:orientation="vertical"
            android:layout_width="@dimen/image_weight"
            android:id="@+id/posterImage"
            android:scaleType="fitCenter"
            tools:ignore="ContentDescription"
            android:layout_height="@dimen/image_height" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/posterImage"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:id="@+id/titleMovie"
            android:textSize="@dimen/text_size_title"
            android:padding="@dimen/general_padding"
            tools:text="@string/movie_detail_title"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/titleMovie"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:id="@+id/dateMovie"
            android:textSize="@dimen/text_size_regular"
            android:padding="@dimen/general_padding"
            tools:text="@string/movie_detail_date"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/dateMovie"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:id="@+id/ratingMovie"
            android:textSize="@dimen/text_size_regular"
            android:padding="@dimen/general_padding"
            tools:text="@string/movie_detail_rating"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ratingMovie"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:id="@+id/plotMovie"
            android:textSize="@dimen/text_size_regular"
            android:padding="@dimen/general_padding"
            tools:text="@string/movie_detail_plot"/>

    </RelativeLayout>
</ScrollView>